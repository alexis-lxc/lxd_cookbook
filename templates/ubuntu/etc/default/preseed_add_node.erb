config:
  core.https_address: <%= @host_ip_address %>:8443
cluster:
  server_name: <%= @hostname %>
  enabled: true
  cluster_password: <%= @lxd_cluster_password %>
  cluster_address: <%= @lxd_cluster_address %>:8443
  cluster_certificate: "<%= @lxd_cluster_certificate %>"
networks: []
storage_pools:
- config: {}
  description: ""
  name: local
  driver: dir
profiles:
- config:
    user.user-data: |
      #cloud-config
      ssh_authorized_keys:
       - <%= @ssh_authorized_key %>
  description: ""
  devices:
    eth0:
      name: eth0
      nictype: bridged
      parent: <%= @network_bridge_name %>
      type: nic
    root:
      path: /
      pool: local
      type: disk
  name: default
