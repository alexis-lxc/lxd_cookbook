config:
  core.https_address: <%= @host_ip_address %>:8443
  core.trust_password: <%= @lxd_cluster_password %>
cluster:
  server_name: <%= @hostname %>
  enabled: true
  cluster_address: ""
  cluster_certificate: <%= @lxd_cluster_certificate %>
  cluster_password: ""
networks:
- name: <%= @network_bridge_name %>
  type: bridge
  managed: true
  config:
    bridge.mode: fan
    bridge.mtu: "1400"
    fan.overlay_subnet: <%= @overlay_network %>
    fan.underlay_subnet: <%= @underlay_network%>
    raw.dnsmasq: port=0
storage_pools:
- config: {}
  description: ""
  name: local
  driver: dir
profiles:
- config:
    user.user-data: |
      #cloud-config
      ssh_authorized_keys:
       - <%= @ssh_authorized_key %>
  description: ""
  devices:
    eth0:
      name: eth0
      nictype: bridged
      parent: <%= @network_bridge_name %>
      type: nic
    root:
      path: /
      pool: local
      type: disk
  name: default
